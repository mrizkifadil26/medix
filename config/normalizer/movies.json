{
  "root": "out/movies.torrent.json",
  "fields": [
    {
      "name": "items.#.name",
      "actions": [
        {
          "type": "replace",
          "from": " - ",
          "to": ": "
        },
        {
          "type": "transform",
          "methods": ["stripBrackets", "titlecase"]
        },
        {
          "type": "save",
          "target": "items.#.metadata.title"
        },
        {
          "type": "extract",
          "pattern": "year",
          "target": "items.#.metadata.year"
        }
      ]
    },
    {
      "name": "items.#",
      "actions": [
        {
          "type": "template",
          "template": "{{metadata.title}} ({{metadata.year}})",
          "target": "items.#.displayName"
        }
      ]
    }
  ]
}
