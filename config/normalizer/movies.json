{
  "root": "output/scanned/media/movies.final.json",
  "fields": [
    {
      "name": "items.#.name",
      "actions": [
        {
          "type": "replace",
          "params": {
            "from": " - ",
            "to": ": "
          },
          "target": "items.#.metadata.title"
        },
        {
          "type": "transform",
          "params": {
            "methods": [
              "removeBrackets",
              "trim"
            ]
          },
          "target": "items.#.metadata.title"
        },
        {
          "type": "extract",
          "params": {
            "pattern": "year"
          },
          "target": "items.#.metadata.year"
        }
      ]
    },
    {
      "name": "items.#",
      "actions": [
        {
          "type": "format",
          "params": {
            "template": "{{metadata.title}} ({{metadata.year}})"
          },
          "target": "items.#.displayName"
        }
      ]
    }
  ]
}